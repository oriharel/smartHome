<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/containerLayout" android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bulb"
            android:id="@+id/tallBulbEx"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="match_parent"
            app:srcCompat="@drawable/bulb"
            android:id="@+id/sofaBulbEx"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="match_parent"
            app:srcCompat="@drawable/bulb"
            android:id="@+id/windowBulbEx"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/buttonsLayout">

        <Button
            android:text="Toggle All"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toggleAll"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>