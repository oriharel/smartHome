<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="16dp"
    android:id="@+id/container"
    android:background="@color/dkgray"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Main2Activity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bulbLayout"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/off_bulb"
            android:id="@+id/tallBulb"
            android:layout_weight="1"
            android:padding="@dimen/bulb_padd" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/off_bulb"
            android:id="@+id/sofaBulb"
            android:layout_weight="1"
            android:padding="@dimen/bulb_padd" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/off_bulb"
            android:id="@+id/windowBulb"
            android:layout_weight="1"
            android:padding="@dimen/bulb_padd" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:text="@string/allOn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toggleButtonHeight"
            android:id="@+id/allOn"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <Button
            android:text="@string/allOff"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:id="@+id/allOff"
            android:layout_gravity="center"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/temp"
        android:textColor="@color/ltgray"
        android:text="dsdd"
        android:gravity="center"
        android:layout_marginTop="@dimen/fab_margin" />
</LinearLayout>