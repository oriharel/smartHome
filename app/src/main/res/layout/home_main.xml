<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="16dp"
        android:id="@+id/container"
        android:background="@color/dkgray">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bulbLayout"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/off_bulb"
            android:id="@+id/tallBulb"
            android:layout_weight="1"
            android:padding="@dimen/bulb_padd" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/off_bulb"
            android:id="@+id/windowBulb"
            android:layout_weight="1"
            android:padding="@dimen/bulb_padd" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/off_bulb"
            android:id="@+id/sofaBulb"
            android:layout_weight="1"
            android:padding="@dimen/bulb_padd" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:text="@string/allOn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toggleButtonHeight"
            android:id="@+id/allOn"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <Button
            android:text="@string/allOff"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:id="@+id/allOff"
            android:layout_gravity="center"
            android:layout_weight="1" />
    </LinearLayout>

    <ImageView
        app:srcCompat="@drawable/broadstairs"
        android:id="@+id/homeImage"
        android:layout_marginTop="10dip"
        android:elevation="24dp"
        android:layout_width="322dip"
        android:layout_height="242dip"
        android:layout_gravity="center" />
</LinearLayout>