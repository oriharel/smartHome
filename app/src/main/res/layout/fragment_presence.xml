<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="16dp"
    android:id="@+id/container"
    android:background="@color/dkgray"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Main2Activity">



    <TextView
        android:text="Last Update:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lastUpdate"
        android:textColor="@color/ltgray"
        android:gravity="center"
        android:layout_marginTop="@dimen/fab_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/oriImageView"
                android:layout_width="match_parent"
                android:layout_height="204dp"
                android:layout_margin="@dimen/bulb_padd"
                android:cropToPadding="false"
                app:srcCompat="@drawable/ori" />

            <TextView
                android:id="@+id/oriState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Home"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/oriSince"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/ltgray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/yifatImageView"
                android:layout_width="match_parent"
                android:layout_height="204dp"
                android:layout_margin="@dimen/bulb_padd"
                app:srcCompat="@drawable/yifat" />

            <TextView
                android:id="@+id/yifatState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Away"
                android:textColor="@color/opaque_red" />

            <TextView
                android:id="@+id/yifatSince"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/ltgray" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/itchukImageView"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_margin="@dimen/bulb_padd"
            android:cropToPadding="false"
            app:srcCompat="@drawable/itchuk" />

        <TextView
            android:id="@+id/itchukState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Home"
            android:textColor="@android:color/holo_green_dark" />

        <TextView
            android:id="@+id/itchukSince"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/ltgray" />
    </LinearLayout>
</LinearLayout>